<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - golablint</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@400;700&display=swap" rel="stylesheet">
    @RenderSection("styles",false)
</head>

<body>
    <header>
        @using System.Security.Claims;
        @{
            string controller = (string)ViewContext.RouteData.Values["controller"];
            bool isAuthenticated = Context.User.Identity.IsAuthenticated;
            <nav class="@(isAuthenticated ? "navbar" : "navbar-anonymous")">
                @if (isAuthenticated)
                {
                    <img class="logo" src="~/image/goLabLint.png" alt="goLabLint logo" />
                }
                else
                {
                    @* <form class="home-search">
                        <input type="text" placeholder="ค้นหาอุปกรณ์">
                        <button type="submit"></button>
                        </form> *@
                }
                <a class="@((controller == "Home" ?"current-page": "") + (!isAuthenticated ? "-anonymous navbar-anonymous": " navbar"))"
                asp-controller="home" asp-action="index" asp-area="">หน้าแรก</a>
                <a class="@((controller == "Equipment" ?"current-page": "") + (!isAuthenticated ? "-anonymous navbar-anonymous": " navbar"))"
                asp-controller="equipment" asp-action="Index" asp-area="">อุปกรณ์</a>
                <a class="@((controller == "Other" ?"current-page": "") + (!isAuthenticated ? "-anonymous navbar-anonymous": " navbar"))"
                asp-controller="other" asp-action="Index" asp-area="">ห้องปฏิบัติการอื่น</a>
                @if (isAuthenticated)
                {
                    <div class="user">
                        <div class="user-description">
                            <p class="user-name">@(Context.User.Claims.Where(claim => claim.Type == ClaimTypes.Name).FirstOrDefault().Value + " " + Context.User.Claims.Where(claim => claim.Type == ClaimTypes.Surname).FirstOrDefault().Value)</p>
                            <p class="user-id">@(Context.User.Claims.Where(claim =>claim.Type==ClaimTypes.Role).FirstOrDefault().Value == "Admin" ? "อาจารย์" : "นักศึกษา")</p>
                        </div>
                        <img class="user-profile" src="~/image/default profile.jpg" alt="user profile" />
                    </div>
                }
            </nav>}
    </header>
    <div>
        <main role="main">@RenderBody()</main>
    </div>
    <footer>
        <div class="container"></div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>